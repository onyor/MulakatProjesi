@{
    ViewData["Title"] = "Contact Page";
}

<style type="text/css">
    #contact .row {
        margin-bottom: 15px;
    }

    button[type='submit'] {
        width: 100%;
        background: #a11816;
        color:white;
    }

    .form-control {
        background: #f7f7f7;
    }
</style>

<div class="text-center">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="card" style="width: 70rem;">
                <form id="contact" target="_self" action="/Home/Contact" method="post">
                    <div class="form-group">
                        <div class="card-body">
                            <div class="row">
                                <div class="col d-flex justify-contect-start">
                                    <h4>Bize Ulaşın</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <input type="text" name="Name" class="form-control" value="" placeholder="Adayın Adı Soyadı" />
                                </div>
                                <div class="col">
                                    <input type="text" name="PhoneNumber" class="form-control" value="" placeholder="Telefon Numarası (5XXXXXXXX)" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <input type="email" name="Email" class="form-control" value="" placeholder="E-Posta Adresi" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <textarea cols="1" name="Message" class="form-control" rows="5">Merhaba ben [Aday Adı Soyadı] test projesini tarafınıza e-posta olarak ilettim. </textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-white">
                                        Gönder
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
